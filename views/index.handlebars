<h1>Burgs Bar</h1>

<h2>Available Burgs!</h2>

<ul>
  {{#each burgers}}
    {{#unless eated_up}}
      {{> burgers/burger-block eated_up=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>These Burgs Been Eated All Up!</h2>

<ul>
  {{#each burgers}}
    {{#if eated_up}}
      {{> burger/buger-block eated_up=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Create Your Own Burg</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eated_up">Eated Up?</label><br>
    <input type="radio" name="eated_up" value="1" checked> Eated All Up!<br>
    <input type="radio" name="eated_up" value="0"> Eat Me!
  </div>

  <button type="submit">Create Burg</button>
</form>
